<%= nested_form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.check_box :pinned %><%= f.label :pinned, "Pin to top" %>
  </div>
  
  <div>
  <%= f.label :catagory %><br>
  <%= f.select :catagory, options_for_select([
  ["Announcements", 0], 
  ["Course Materials", 1]
  ], params[:catagory]) %>
  </div>
  
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, :cols => "80", :rows => "15" %>
  </div>
  
  <%= f.fields_for :attachments do |a| %>
    <div class="field">
      <%= a.text_field :path, :disabled => true %>
      <%= a.file_field :path %>
      <%= a.link_to_remove "Remove this attachment" %>
    </div>
  <% end %>
  <%= f.link_to_add "Add a attachment", :attachments %>
  
  <%= hidden_field_tag :era, params[:era] %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
