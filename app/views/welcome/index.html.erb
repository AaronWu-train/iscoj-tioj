<div class="row">
  <div class="col-md-12">
    <div class="well well-lg">
      <h5>Bulletin Board<small class="pull-right"><%= link_to "Show all", articles_path %></small></h5>
      <%= render 'articles/table', :articles => @bulletins %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="well well-lg">
      <h5>Recent Contests<small class="pull-right"><%= link_to "Show all", contests_path %></small></h5>
      <table class="table table-hover table-condensed table-striped">
        <tbody>
          <% @contests.each do |f| %>
            <tr>
              <td><%= f.title %></td>
              <% if user_signed_in? %>
                <td><%= link_to 'Particapate', f, :class => 'btn btn-xs btn-primary' %></td>
              <% end %>
              <% if Time.now > f.end_time %>
                <td>Ended</td>
                <td><%= distance_of_time_in_words_to_now(f.end_time) %></td>
              <% elsif Time.now > f.start_time %>
                <td>Ready</td>
                <td>Now</td>
              <% else %>
                <td>Not yet</td>
                <td><%= distance_of_time_in_words_to_now(f.start_time) %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-md-6">
    <div class="well well-lg">
      <h5>Ranked Coders<small class="pull-right"><%= link_to "Show all", users_path %></small></h5>
      <table class="table table-hover table-condensed table-striped">
        <tbody>
          <% @users.each do |f| %>
            <tr>
              <td><%= f.id %><td>
              <td><%= f.username %><td>
              <td><%= f.id %><td>
              <td><%= f.id %><td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

