<h4 class="page-header">
  Dashboard <small><%= @contest.title %></small>
</h4>

<div class="row">
  <div class="col-md-2">
    <%= link_to 'Back to Contest', contest_path(@contest), :class => 'btn btn-default btn-xs btn-block' %>
  </div>
  <div class="col-md-2">
    <%= link_to 'Submissions', contest_submissions_path(@contest), :class => 'btn btn-info btn-xs btn-block' %>
  </div>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Rank</th>
      <th></th>
      <th>Username</th>
      <th>Nickname</th>
      <% @tasks.each_with_index do |task, index| %>
	<th><%= link_to ('p' + (65+index).chr), contest_problem_path(@contest, task) %></th>
      <% end %>
      <% if @contest.contest_type == 2 %>
        <th>Solv</th>
        <th>Penalty</th>
      <% else %>
        <th>Total</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @scores.each_with_index do |s, index| %>
      <% case s[2] %>
      <% when @color[0] %>
        <tr class="warning">
      <% when @color[1] %>
        <tr class="success">
      <% when @color[2] %>
        <tr class="info">
      <% else %>
        <tr>
      <% end %>
        <td><%= index+1 %></td>
        <td><%= link_to image_tag(User.find(s[0]).avatar.mini_thumb.to_s, :class => "img-rounded"), user_path(s[0]) %></td>
        <td><%= link_to User.find(s[0]).username, user_path(s[0]) %></td>
        <td><%= User.find(s[0]).nickname %></td>
        <% if @contest.contest_type == 2 %>
          <% s[3].each do |t|%>
            <td>
              <% if t[2] %>
                <span style="color:#008000;"><strong><%= t[0].to_s %><small><%= "/" + t[1].to_s %></small></strong></span>
              <% elsif t[1] >= 0 %>
                <span class="text-success"><strong><%= t[0].to_s %></strong></span><small><%= "/" + t[1].to_s %></small>
              <% elsif t[0] > 0 %>
                <span class="text-danger"><strong><%= t[0].to_s %></strong></span><small><%= "/-" %></small>
              <% else %>
                <%= '-' %>
              <% end %>
            </td>
          <% end %>
          <td><%= s[2].to_s %></td>
          <td><%= s[4] %></td>
        <% else %>
          <% s[1].each do |t|%>
            <td><%= t %></td>
          <% end %>
          <td><%= s[2] %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-md-2">
    <%= link_to 'Back to Contest', contest_path(@contest), :class => 'btn btn-default btn-xs btn-block' %>
  </div>
  <div class="col-md-2">
    <%= link_to 'Submissions', contest_submissions_path(@contest), :class => 'btn btn-info btn-xs btn-block' %>
  </div>
</div>

