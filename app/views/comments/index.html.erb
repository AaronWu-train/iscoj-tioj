<h4>Listing comments</h4>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th>Post</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.title %></td>
        <td><%= comment.content %></td>
        <td><%= comment.user_id %></td>
        <td><%= comment.post_id %></td>
        <% if @contest %>
          <td><%= link_to 'Show', contest_post_comment_path(@contest, @post, comment) %></td>
          <td><%= link_to 'Edit', edit_contest_post_comment_path(@contest, @post, comment) %></td>
          <td><%= link_to 'Destroy', contest_post_comment_path(@contest, @post, comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
          <td><%= link_to 'Show', comment %></td>
          <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
          <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @contest %>
<%= link_to 'New Comment', new_contest_post_comment_path(@contest, @post) %>
<% else %>
<%= link_to 'New Comment', new_comment_path %>
<% end %>
