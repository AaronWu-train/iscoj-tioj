<h4 class="page-header">Edit <%= resource_name.to_s.humanize %> <small><%= current_user.username %></small></h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="form-group">
    <%= f.label :nickname %>
    <%= f.text_field :nickname, :autofocus => true, :class => "form-control flat" %>
  </div>
  
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, :class => "form-control flat" %>
  </div>
  
  <div class="form-group">
    <%= f.label :motto %>
    <%= f.text_field :motto, :class => "form-control flat" %>
  </div>
  
  <div class="form-group">
      <%= f.label :avatar %>
      <%= f.file_field :avatar, :class => "form-control flat" %>
      <%= f.hidden_field :avatar_cache %>
  </div>
  
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_username %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, :autocomplete => "off", :class => "form-control flat" %>
  </div>

  <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, :autocomplete => "off", :class => "form-control flat" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :autocomplete => "off", :class => "form-control flat" %>
  </div>
  
  <hr>
  
  <%= f.submit "Update", :class => "btn btn-success" %>
<% end %>

<h6>Unhappy? <small>Cancel my account<small></h6>
<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, :class => 'btn btn-xs btn-warning' %>

